<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!--Make sure to save two images home and youtube in drawable folder-->

    <ImageButton
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/gradient_button_background"
        android:contentDescription="@android:string/ok"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="41dp"

        android:layout_above="@+id/btn_create_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="-38dp"
        android:text="Create an Account"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_create_account"
        android:layout_alignTop="@+id/btn_create_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-418dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="251dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_green_flag" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="301dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="-69dp"
        android:text="GreenFlag customers can create an account to access"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_above="@+id/btn_create_account"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="150dp"
        android:src="@drawable/tick" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="11dp"
        android:layout_above="@+id/btn_create_account"
        android:layout_alignStart="@+id/imageView1"
        android:layout_marginBottom="100dp"
        android:src="@drawable/tick" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="19dp"
        android:layout_height="14dp"
        android:layout_above="@+id/btn_create_account"
        android:layout_alignStart="@+id/imageView1"
        android:layout_marginBottom="50dp"
        android:src="@drawable/tick" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView1"
        android:text="Car health updates"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Request a rescue online"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Policy information"
        android:textColor="@color/white" />


</RelativeLayout>